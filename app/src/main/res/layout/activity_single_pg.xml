<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prem.pgapp.SinglePGActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp">

        <ImageView
            android:id="@+id/imageViewPG"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:id="@+id/viewPGDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewPGName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dummy PG Name"
                android:textSize="25dp"
                android:textColor="#000000"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageButtonLocation"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_location"
                    android:background="#000000" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dummy Location"
                        android:id="@+id/textViewPGLocation"
                        android:layout_marginTop="20dp"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/viewPGType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/viewPGArea"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/imageView"
                        android:background="@color/colorPrimary"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="Dummy Type"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#c90000"
                        android:id="@+id/textViewPGPrice"
                        android:text="INR 5000"
                        android:textSize="20dp"/>
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="15dp">
            <ImageView
                android:id="@+id/showAC"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_no_ac"
                android:layout_margin="5dp"
                android:layout_marginRight="15dp"/>

            <ImageView
                android:id="@+id/showFood"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_no_food"
                android:layout_marginRight="15dp"
                android:layout_margin="5dp"/>

            <ImageView
                android:id="@+id/showMaid"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_maid"
                android:layout_marginRight="15dp"
                android:layout_margin="5dp"/>

            <ImageView
                android:id="@+id/showLaundry"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_laundry"
                android:layout_marginRight="15dp"
                android:layout_margin="5dp"/>

            <ImageView
                android:id="@+id/showWifi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_no_wifi"
                android:layout_marginRight="15dp"
                android:layout_margin="5dp"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textViewAC"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="AC"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/textViewFood"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Food"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginRight="30dp"/>
                <TextView
                    android:id="@+id/textViewMaid"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Maid"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginRight="15dp"/>
                <TextView
                    android:id="@+id/textViewLaundry"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Laundry"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginRight="15dp"/>
                <TextView
                    android:id="@+id/textViewWifi"
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:text="Wifi"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginRight="15dp"/>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fbc02d"
                android:textColor="#ffffff"
                android:text="Call Owner"
                android:id="@+id/buttonCall" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
